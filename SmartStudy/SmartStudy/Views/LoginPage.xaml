<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartStudy.Views.LoginPage"
             Title="Вход в учетную запись">
    <VerticalStackLayout 
        Margin="50"
        Spacing="5"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        x:Name="Layout_Login"
        BackgroundColor="#141211">
        <!--VerticalOptions="Start"-->
        <Entry
            x:Name="entry_Email"
            Placeholder="Email"/>

        <Grid
            Grid.Row="1"
            Grid.Column="2"
            HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Entry Grid.Row="0" Grid.Column="0"
                   x:Name="Password"
                   Placeholder="Пароль"
                   IsPassword="True"
                   MaxLength="20"/>

            <Button Grid.Row="0" Grid.Column="1"
                    Text="👁" 
                    WidthRequest="15"
                    HeightRequest="15"
                    Clicked="click_password_visibility"
                    Padding="0"/>
        </Grid>
        <!--Entry
            x:Name="entry_password"
            Placeholder="Пароль"
            IsPassword="True"/
        >
        -->
            
        <Button
            x:Name="button_login"
            TextColor="#6600CC"
            BackgroundColor="White"
            Text="Войти"
            Clicked="button_login_clicked"/>

        <Button
            x:Name="button_registration"
            TextColor="#6600CC"
            BackgroundColor="White"
            Text="Регистрация"
            Clicked="button_registration_clicked"/>


        <!--
        <Button.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}"
                              CommandParameter="///registration" />
            </Button.GestureRecognizers>
        </Button>
        -->

        <Label Text="Загеристрироваться"
               VerticalOptions="End"
               HorizontalOptions="End"
               TextColor="#6600CC"
               FontSize="Medium">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}"
                              CommandParameter="///registration" />
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>