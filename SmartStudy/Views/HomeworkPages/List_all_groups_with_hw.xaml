<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartStudy.Views.HomeworkPages.List_all_groups_with_hw"
             Title="List_all_groups_with_hw">
    <VerticalStackLayout>
        <ScrollView>
            <CollectionView x:Name="all_groups_with_hw"
                        ItemsSource="{Binding GroupsWithHomework}"
                        Margin="20"
                        SelectionMode="Single"
                        SelectionChanged="group_ckicked">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Title}" FontSize="28" HorizontalOptions="Start"/>
                            <Label Text="{Binding Description}" FontSize="20" TextColor="DarkGray"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
