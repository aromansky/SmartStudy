<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartStudy.Views.Teacher.AppShell_Teacher"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views_teacher="clr-namespace:SmartStudy.Views.Teacher"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="TabBar_t">
        <Tab Icon="main_page.svg"
            Title="Главная">
            <ShellContent
                ContentTemplate="{DataTemplate views_teacher:MainPage_Teacher}"
                Route="main_page"/>
        </Tab>
        <Tab Icon="calendar.svg"
            Title="Календарь">
            <ShellContent
                ContentTemplate="{DataTemplate views_teacher:Calendar}"
                Route="calendar"/>
        </Tab>
        <Tab Icon="groups.svg"
            Title="Группы">
            <ShellContent
                ContentTemplate="{DataTemplate views_teacher:Groups}"
                Route="groups"/>
        </Tab>
    </TabBar>
    <ShellContent
        ContentTemplate="{DataTemplate views_teacher:Calendar_note_add}"
        Route="calendar_note_add"/>
    <ShellContent
        ContentTemplate="{DataTemplate views_teacher:Calendar_note_edit}"
        Route="calendar_note_edit"/>
    <ShellContent
        ContentTemplate="{DataTemplate views_teacher:Create_group}"
        Route="create_group"/>
</Shell>
